<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient
                android:startColor="@color/theme_gray"
                android:centerColor="@color/theme_gray"
                android:endColor="@color/theme_gray"
            />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                        android:startColor="@color/theme_default_primary"
                        android:centerColor="@color/theme_default_primary"
                        android:endColor="@color/theme_default_primary"
                />
            </shape>
        </clip>
    </item>
</layer-list>
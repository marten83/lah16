<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AboutTheme" parent="AppTheme">
        <!--item name="windowActionBar">true</item-->
    </style>

    <style name="AppThemeTrans" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <!--style name="ActionBar" parent="BaseTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style-->

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Here we setting appcompat’s actionBarStyle -->
        <!--item name="windowActionBar">false</item-->

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_default_primary</item>
        <item name="colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:windowBackground">@color/theme_window_background</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyTheme" parent="android:style/Theme.Holo">
        <!--item name="android:actionBarStyle">@style/MyActionBarStyle</item-->
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showHome</item>

    </style>
    <style name="MyTheme2" parent="android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBarStyle2</item>
    </style>

    <style name="MyActionBarStyle2" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showTitle</item>

    </style>

    <style name="MyTheme3" parent="android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBarStyle3</item>
    </style>

    <style name="MyActionBarStyle3" parent="@android:style/Theme.NoTitleBar">
        <item name="android:displayOptions">showHome</item>

    </style>

    <style name="MyTheme4" parent="android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBarStyle4</item>
    </style>

    <style name="MyActionBarStyle4" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showTitle</item>
    </style>

</resources>